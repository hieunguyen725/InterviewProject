@model IEnumerable<Interview.Models.Post>

@if (ViewBag.postCount > 0)
{

    <h6 class="text-center">Posts that @ViewBag.username have commented on</h6>
    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Posted On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Details", "Posts", new { id=post.PostID })">@post.PostTitle</a></td>
                    <td>@post.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

} else
{
    <h6 class="text-center">@ViewBag.username has no comments.</h6>
}




