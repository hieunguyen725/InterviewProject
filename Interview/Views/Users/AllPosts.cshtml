@model PagedList.IPagedList<Interview.Models.Post>
@using PagedList.Mvc;
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = ViewBag.username + "'s posts";
}

@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-sm-offset-4 col-sm-3">
            <h4>@ViewBag.username</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-9" id="post-list">
            @Html.Partial("_Posts")
        </div>
        <div class="col-sm-3">
            @Html.Partial("_SideBar")
        </div>
    </div>
}
else
{
    <h4>You currently have no posts.</h4>
    <a href="@Url.Action("Create", "Posts")" class="btn btn-primary btn-sm">Create a new post</a>
}


