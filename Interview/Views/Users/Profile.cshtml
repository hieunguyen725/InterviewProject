@model IEnumerable<Interview.Models.Post>

@{
    ViewBag.Title = "Profile";
}

@if (ViewBag.postCount > 0)
{
    <h4>@ViewBag.username's posts (@ViewBag.postCount)</h4>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Posted On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.PostTitle</td>
                    <td>@post.SelectedCategory</td>
                    <td>@post.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
    if (ViewBag.postCount == 5)
    {
        <a href="@Url.Action("AllPosts", "Users", new { username = ViewBag.username})">View more</a>
    }
} else
{
    <h4>@ViewBag.username currently have no posts.</h4>
}




